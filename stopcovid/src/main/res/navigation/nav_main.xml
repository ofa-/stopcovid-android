<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/proximityFragment"
    tools:ignore="UnusedNavigation">

    <activity
        android:id="@+id/onBoardingActivity"
        android:name="com.lunabeestudio.stopcovid.activity.OnBoardingActivity"
        tools:layout="@layout/activity_on_boarding" />

    <fragment
        android:id="@+id/proximityFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.ProximityFragment"
        tools:layout="@layout/fragment_recycler_view">
        <action
            android:id="@+id/action_proximityFragment_to_manageDataFragment"
            app:destination="@id/manageDataFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_privacyFragment"
            app:destination="@id/privacyFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_captchaFragment"
            app:destination="@id/captchaFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_healthFragment"
            app:destination="@id/healthFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_infoCenterFragment"
            app:destination="@id/infoCenterFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_keyFiguresFragment"
            app:destination="@id/keyFiguresFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_postalCodeBottomSheetFragment"
            app:destination="@id/postalCodeBottomSheetFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_proximityFragment_to_attestationsFragment"
            app:destination="@id/attestationsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/attestationsFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.AttestationsFragment"
        tools:layout="@layout/fragment_recycler_view">
        <action
            android:id="@+id/action_attestationsFragment_to_newAttestationFragment"
            app:destination="@id/newAttestationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_attestationsFragment_to_fullscreenAttestationFragment"
            app:destination="@id/fullscreenAttestationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newAttestationFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.NewAttestationFragment"
        tools:layout="@layout/fragment_recycler_view">
        <action
            android:id="@+id/action_newAttestationFragment_to_newAttestationPickerFragment"
            app:destination="@id/newAttestationPickerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newAttestationPickerFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.NewAttestationPickerFragment"
        tools:layout="@layout/fragment_recycler_view">
        <argument
            android:name="key"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="selectedCode"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fullscreenAttestationFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.FullscreenAttestationFragment"
        tools:layout="@layout/fragment_recycler_view">
        <argument
            android:name="qrCodeValue"
            app:argType="string"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/captchaFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.CaptchaFragment"
        tools:layout="@layout/fragment_recycler_view" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.ReportFragment"
        tools:layout="@layout/fragment_recycler_view">
        <deepLink app:uri="https://bonjour.tousanticovid.gouv.fr/app/code/{code}" />
        <deepLink app:uri="https://bonjour.stopcovid.gouv.fr/app/code/{code}" />
        <argument
            android:name="code"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_reportFragment_to_codeFragment"
            app:destination="@id/codeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_reportFragment_to_qrCodeFragment"
            app:destination="@id/qrCodeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/healthFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.HealthFragment"
        tools:layout="@layout/fragment_recycler_view">
        <action
            android:id="@+id/action_healthFragment_to_informationFragment"
            app:destination="@id/informationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/infoCenterFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.InfoCenterFragment"
        tools:layout="@layout/fragment_recycler_view" />
    <fragment
        android:id="@+id/keyFiguresFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.KeyFiguresFragment"
        tools:layout="@layout/fragment_recycler_view">
        <action
            android:id="@+id/action_keyFiguresFragment_to_postalCodeBottomSheetFragment"
            app:destination="@id/postalCodeBottomSheetFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/codeFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.CodeFragment"
        tools:layout="@layout/fragment_recycler_view">
        <argument
            android:name="code"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_codeFragment_to_symptomsOriginFragment"
            app:destination="@id/symptomsOriginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.QRCodeFragment"
        tools:layout="@layout/fragment_qr_code">
        <action
            android:id="@+id/action_qrCodeFragment_to_symptomsOriginFragment"
            app:destination="@id/symptomsOriginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/symptomsOriginFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.SymptomsOriginFragment"
        tools:layout="@layout/fragment_recycler_view">
        <argument
            android:name="code"
            app:argType="string" />
        <action
            android:id="@+id/action_symptomsOriginFragment_to_sendHistoryFragment"
            app:destination="@id/sendHistoryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/sendHistoryFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.SendHistoryFragment"
        tools:layout="@layout/fragment_recycler_view">
        <argument
            android:name="code"
            app:argType="string" />
        <argument
            android:name="firstSymptoms"
            app:argType="integer" />
        <action
            android:id="@+id/action_sendHistoryFragment_to_isSickFragment"
            app:destination="@id/isSickFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/privacyFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.PrivacyFragment"
        tools:layout="@layout/fragment_recycler_view" />
    <fragment
        android:id="@+id/manageDataFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.ManageDataFragment"
        tools:layout="@layout/fragment_recycler_view" />
    <fragment
        android:id="@+id/informationFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.InformationFragment"
        tools:layout="@layout/fragment_recycler_view">
        <action
            android:id="@+id/action_informationFragment_to_gestureFragment"
            app:destination="@id/gestureFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/gestureFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.GestureFragment"
        tools:layout="@layout/fragment_recycler_view" />
    <navigation
        android:id="@+id/nav_about"
        app:startDestination="@id/aboutFragment">
        <fragment
            android:id="@+id/aboutFragment"
            android:name="com.lunabeestudio.stopcovid.fragment.AboutFragment"
            tools:layout="@layout/fragment_recycler_view" />
    </navigation>
    <action
        android:id="@+id/action_global_onBoardingActivity"
        app:destination="@id/onBoardingActivity"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    <fragment
        android:id="@+id/isSickFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.IsSickFragment"
        android:label="IsSickFragment"
        tools:layout="@layout/fragment_recycler_view" />
    <action
        android:id="@+id/action_global_isSickFragment"
        app:destination="@id/isSickFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/nav_main"
        app:popUpToInclusive="true" />
    <dialog
        android:id="@+id/postalCodeBottomSheetFragment"
        android:name="com.lunabeestudio.stopcovid.fragment.PostalCodeBottomSheetFragment"
        tools:layout="@layout/fragment_postal_code_bottom_sheet" />
</navigation>
