<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_large"
    android:layout_marginVertical="@dimen/spacing_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_large">

            <TextView
                android:id="@+id/headerTextView"
                style="@style/Theme.StopCovid.Link.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                android:drawablePadding="@dimen/spacing_medium"
                android:textColor="?colorOnPrimary"
                android:textIsSelectable="false"
                app:drawableStartCompat="@drawable/ic_recommendation"
                app:drawableTint="?colorOnPrimary"
                tools:text="@tools:sample/lorem[1]" />

            <TextView
                android:id="@+id/contentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                android:textAppearance="@style/TextAppearance.StopCovid.Caption"
                android:textColor="?colorOnPrimary"
                android:textIsSelectable="false"
                tools:text="@tools:sample/lorem[43]" />

        </LinearLayout>

        <include
            android:id="@+id/action1"
            layout="@layout/item_isolation_action" />

        <include
            android:id="@+id/action2"
            layout="@layout/item_isolation_action" />

        <include
            android:id="@+id/action3"
            layout="@layout/item_isolation_action" />

        <include
            android:id="@+id/action4"
            layout="@layout/item_isolation_action" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>