<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_large"
    android:layout_marginVertical="@dimen/spacing_small"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:background="@drawable/bg_no_risk"
        android:layoutDirection="inherit"
        android:gravity="end">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_image_height"
            android:layout_gravity="bottom"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.StopCovid.Caption"
                tools:text="@tools:sample/lorem[2]"
                tools:textColor="@color/color_on_gradient" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.StopCovid.Title"
                app:layout_goneMarginBottom="@dimen/spacing_large"
                app:layout_goneMarginTop="@dimen/spacing_large"
                tools:text="@tools:sample/lorem[3]"
                tools:textColor="@color/color_on_gradient" />

            <TextView
                android:id="@+id/subtitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.StopCovid.Caption"
                tools:text="@tools:sample/lorem[2]"
                tools:textColor="@color/color_on_gradient" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>