<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_large"
    android:layout_marginVertical="@dimen/spacing_small"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <TextView
            android:id="@+id/headerTextView"
            style="@style/Theme.StopCovid.Link.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:drawablePadding="@dimen/spacing_medium"
            android:textColor="?colorOnPrimary"
            android:textIsSelectable="false"
            app:drawableStartCompat="@drawable/ic_map"
            app:drawableTint="?colorOnPrimary"
            tools:text="@tools:sample/lorem[1]" />

        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.StopCovid.Caption"
            android:textColor="?colorOnPrimary"
            android:textIsSelectable="false"
            tools:text="@tools:sample/lorem[43]" />

        <TextView
            android:id="@+id/linkTextView"
            style="@style/Theme.StopCovid.Link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center_horizontal"
            android:textColor="?colorOnPrimary"
            android:textIsSelectable="false"
            tools:text="@tools:sample/lorem[2]" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>